@* _Layout.cshtml  *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web1</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        html, body {
            height: 100%;
        }

            body.app-body {
                background: #F5F5F5; 
                min-height: 100vh;
                margin: 0;
                font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial, "Helvetica Neue", "Noto Sans", "Liberation Sans", sans-serif;
            }

        .app-shell {
            display: flex;
            min-height: 100vh;
            width: 100%;
        }

        .app-sidebar {
            width: 230px;
            background: #004D98; 
            color: #fff;
            display: flex;
            flex-direction: column;
            padding: 0.75rem 0;
        }

        .sidebar-brand {
            display: flex;
            align-items: center;
            gap: .5rem;
            padding: .5rem 1rem 1rem 1rem;
            border-bottom: 2px solid #EDBB00; 
        }

        .brand-mini {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 30px;
            height: 24px;
            background: #A50044; 
            border-radius: 3px;
            font-weight: 700;
            color: #fff;
        }

        .brand-name {
            font-weight: 700;
            color: #EDBB00; 
        }

        .sidebar-nav {
            display: flex;
            flex-direction: column;
            padding-top: .5rem;
        }

        .sidebar-link {
            color: #fff;
            text-decoration: none;
            padding: .65rem 1rem;
            display: flex;
            align-items: center;
            border-left: 4px solid transparent;
            transition: background .15s ease, color .15s ease;
            font-size: .95rem;
        }

            .sidebar-link:hover,
            .sidebar-link:focus {
                background: #A50044;
                color: #fff;
                border-left: 4px solid #EDBB00; 
            }

        .app-sidebar.collapsed {
            width: 0;
            overflow: hidden;
        }

        .app-main {
            flex: 1 1 auto;
            display: flex;
            flex-direction: column;
            min-width: 0;
        }

        .topbar {
            background: #A50044; 
            color: #fff;
            padding: .6rem 0;
            border-bottom: 3px solid #EDBB00; 
        }

            .topbar .topbar-brand {
                color: #fff;
                font-weight: 700;
            }

        .app-content {
            padding: 1rem 1rem;
        }

        .content-card {
            background: #ffffff;
            padding: 1rem;
            border-left: 5px solid #004D98;
        }

        .app-footer {
            border-top: 3px solid #EDBB00;
            padding: .75rem 1rem;
            font-size: .9rem;
            color: #004D98;
            background: #F5F5F5;
        }

            .app-footer a {
                color: #A50044;
                text-decoration: underline;
            }
    </style>

</head>
<body class="app-body">
    <div class="app-shell">
        <aside id="sidebar" class="app-sidebar">
            <div class="sidebar-brand">
                <span class="brand-mini">MP</span>
                <span class="brand-name">Tarea</span>
            </div>

            <nav class="sidebar-nav">
                <a class="sidebar-link" asp-area="" asp-page="/Index">Inicio</a>
                <a class="sidebar-link" asp-area="" asp-page="/Privacy">Privacidad</a>

            </nav>
        </aside>

        <div class="app-main">
            <header class="topbar">
                <div class="container-fluid d-flex align-items-center justify-content-between">
                    <div class="topbar-brand">Tareas</div>
                    <button id="btnToggle" class="btn btn-sm btn-outline-light">
                        Toggle navigation
                    </button>
                </div>
            </header>

            <main class="app-content container-fluid">
                <div class="content-card">
                    @RenderBody()
                </div>
            </main>

            <footer class="app-footer">

            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('btnToggle')?.addEventListener('click', function () {
            document.getElementById('sidebar')?.classList.toggle('collapsed');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
