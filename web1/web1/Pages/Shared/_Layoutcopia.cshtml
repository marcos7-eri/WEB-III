@* _Layout.cshtml  *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web1</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        html, body {
            height: 100%;
        }

            body.app-body {
                background: linear-gradient(135deg, #004D98, #A50044);
                min-height: 100vh;
                margin: 0;
                font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial, "Helvetica Neue", "Noto Sans", "Liberation Sans", sans-serif;
                color: #fff;
            }

        .app-shell {
            display: flex;
            min-height: 100vh;
            width: 100%;
        }

        .app-sidebar {
            width: 230px;
            background: #004D98;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding: 0.75rem 0;
            box-shadow: 2px 0 10px rgba(0,0,0,.4);
        }

        .sidebar-brand {
            display: flex;
            align-items: center;
            gap: .5rem;
            padding: .5rem 1rem 1rem 1rem;
            border-bottom: 2px solid #EDBB00;
        }

        .brand-mini {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 30px;
            height: 24px;
            background: #A50044;
            border-radius: 5px;
            font-weight: 700;
            color: #fff;
        }

        .brand-name {
            font-weight: 700;
            color: #EDBB00;
        }

        .sidebar-nav {
            display: flex;
            flex-direction: column;
            padding-top: .5rem;
        }

        .sidebar-link {
            color: #fff;
            text-decoration: none;
            padding: .65rem 1rem;
            display: flex;
            align-items: center;
            border-left: 4px solid transparent;
            transition: background .2s ease, color .2s ease, border-left .2s ease;
            font-size: .95rem;
        }

            .sidebar-link:hover,
            .sidebar-link:focus {
                background: #A50044;
                color: #fff;
                border-left: 4px solid #EDBB00;
            }

        .app-sidebar.collapsed {
            width: 0;
            overflow: hidden;
        }

        .app-main {
            flex: 1 1 auto;
            display: flex;
            flex-direction: column;
            min-width: 0;
        }

        .topbar {
            background: #A50044;
            color: #fff;
            padding: .6rem 0;
            border-bottom: 3px solid #EDBB00;
            box-shadow: 0 2px 6px rgba(0,0,0,.3);
        }

            .topbar .topbar-brand {
                color: #fff;
                font-weight: 700;
                letter-spacing: 1px;
            }

        .btn-outline-light {
            border: 2px solid #EDBB00;
            color: #EDBB00;
            font-weight: bold;
        }

            .btn-outline-light:hover {
                background: #EDBB00;
                color: #004D98;
            }

        .btn-barca {
            background: #004D98;
            color: #fff;
            border: 2px solid #EDBB00;
            font-weight: bold;
            border-radius: 8px;
            padding: .5rem 1rem;
            transition: all .2s ease;
        }

            .btn-barca:hover {
                background: #A50044;
                border-color: #EDBB00;
                color: #fff;
                transform: scale(1.05);
            }

        .app-content {
            padding: 1rem 1rem;
        }

        .content-card {
            background: #fff;
            color: #333;
            padding: 1.5rem;
            border-left: 6px solid #EDBB00;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,.2);
        }

        .app-footer {
            border-top: 3px solid #EDBB00;
            padding: .75rem 1rem;
            font-size: .9rem;
            color: #fff;
            background: #004D98;
            text-align: center;
        }

            .app-footer a {
                color: #EDBB00;
                font-weight: bold;
                text-decoration: none;
            }

                .app-footer a:hover {
                    text-decoration: underline;
                    color: #A50044;
                }
    </style>



</head>
<body class="app-body">
    <div class="app-shell">
        <aside id="sidebar" class="app-sidebar">
            <div class="sidebar-brand">
                <span class="brand-name">Tareas</span>
            </div>

            <nav class="sidebar-nav">
                <a class="sidebar-link" asp-area="" asp-page="/Index">Inicio</a>
                <a class="sidebar-link" asp-area="" asp-page="/Privacy">Privacidad</a>
            </nav>
        </aside>

        <div class="app-main">
            <header class="topbar">
                <div class="container-fluid d-flex align-items-center justify-content-between">
                    <div class="topbar-brand">Tareas</div>
                    <button id="btnToggle" class="btn btn-sm btn-outline-light">
                        Toggle navigation
                    </button>
                </div>
            </header>

            <main class="app-content container-fluid">
                <div class="content-card">
                    @RenderBody()
                </div>
            </main>

            <footer class="app-footer">
                
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('btnToggle')?.addEventListener('click', function () {
            document.getElementById('sidebar')?.classList.toggle('collapsed');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
